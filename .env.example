# Use pooled connection string for app runtime (Neon pooled URL or Supabase pooler URL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require&pgbouncer=true&connect_timeout=15"

# Use direct connection string for Prisma migrations (non-pooled)
DIRECT_URL="postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require&connect_timeout=15"

# Optional private access protection for a 2-person internal app
BASIC_AUTH_USER="founder"
BASIC_AUTH_PASSWORD="change-this-password"
